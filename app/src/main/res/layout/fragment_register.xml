<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/heroRegister"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:src="@drawable/sign_up_cuate"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name"/>

        <TextView
            style="@style/TextAppearance.Auth.Title"
            android:text="Crear cuenta"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <TextView
            style="@style/TextAppearance.Auth.Subtitle"
            android:text="Por favor, regístrate para continuar."
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>

        <!-- Nombre de usuario -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Auth.InputPill"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:startIconDrawable="@drawable/ic_mail"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:startIconTint="@color/authSubtitle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUsername"
                style="@style/Widget.Auth.InputEditText"
                android:hint="Nombre de usuario"
                android:inputType="textPersonName"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Auth.InputPill"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:startIconDrawable="@drawable/ic_phone"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:startIconTint="@color/authSubtitle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                style="@style/Widget.Auth.InputEditText"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Contraseña -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Auth.InputPill"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/authSubtitle"
            app:endIconMode="password_toggle"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:endIconTint="@color/authSubtitle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPass"
                style="@style/Widget.Auth.InputEditText"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Recordarme -->
        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                style="@style/TextAppearance.Auth.Subtitle"
                android:text="Recordarme la próxima vez"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/swRemember"
                style="@style/Widget.Auth.Switch"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:checked="true"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            style="@style/Widget.Auth.PrimaryPill"
            android:text="Crear cuenta"
            android:layout_width="match_parent" android:layout_height="52dp"
            android:layout_marginTop="16dp"/>

        <!-- CTA inferior -->
        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:gravity="center" android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                style="@style/TextAppearance.Auth.Subtitle"
                android:text="¿Ya tienes cuenta? "
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvGoLogin"
                style="@style/TextAppearance.Auth.Link"
                android:clickable="true"
                android:text="Inicia sesión"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
