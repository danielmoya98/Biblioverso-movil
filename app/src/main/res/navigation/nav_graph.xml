<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.library.ui.home.HomeFragment"
        android:label="Inicio">

        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_notificationFragment"
            app:destination="@id/notificationFragment" />
    </fragment>

    <!-- Search -->
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.library.ui.search.SearchFragment"
        android:label="Buscar">
        <action
            android:id="@+id/action_searchFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Notifications -->
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.library.ui.notifications.NotificationFragment"
        android:label="Notificaciones">
        <action
            android:id="@+id/action_notificationFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/bookmarksFragment"
        android:name="com.example.library.ui.bookmarks.BookmarksFragment"
        android:label="Favoritos">
        <action android:id="@+id/action_bookmarks_to_details" app:destination="@id/bookDetailFragment">
            <argument android:name="bookId" app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/reservationsFragment"
        android:name="com.example.library.ui.reservations.ReservationsFragment"
        android:label="Reservas"/>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.library.ui.profile.ProfileFragment"
        android:label="Perfil"/>

    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.example.library.ui.details.BookDetailFragment"
        android:label="Detalle">
        <argument android:name="bookId" app:argType="string" android:defaultValue=""/>
    </fragment>
</navigation>