<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.library.ui.SplashFragment"
        android:label="Splash">
        <action android:id="@+id/action_splash_to_onboarding" app:destination="@id/onboardingFragment"/>
        <action android:id="@+id/action_splash_to_welcome" app:destination="@id/welcomeFragment"/>
    </fragment>

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.library.ui.onboarding.OnboardingFragment"
        android:label="Onboarding">
        <action android:id="@+id/action_onboarding_to_welcome" app:destination="@id/welcomeFragment"/>
    </fragment>

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.library.ui.welcome.WelcomeFragment"
        android:label="Welcome">
        <action android:id="@+id/action_welcome_to_login" app:destination="@id/loginFragment"/>
        <action android:id="@+id/action_welcome_to_register" app:destination="@id/registerFragment"/>
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.library.ui.auth.LoginFragment"
        android:label="Login">
        <action android:id="@+id/action_login_to_register" app:destination="@id/registerFragment"/>
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.library.ui.auth.RegisterFragment"
        android:label="Register">
        <action android:id="@+id/action_register_to_login" app:destination="@id/loginFragment"/>
    </fragment>

</navigation>
